{
  "name": "wshe",
  "type": "module",
  "version": "2.2.2",
  "packageManager": "pnpm@9.9.0",
  "description": "A simple yet modern websocket client.",
  "author": "alexzhang1030",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexzhang1030/wshe.git"
  },
  "keywords": [
    "websocket",
    "websocket client"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./server": {
      "import": "./dist/server.js",
      "require": "./dist/server.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "vitest",
    "lint": "NODE_OPTIONS=--import=tsx eslint --config=eslint.config.ts .",
    "prepare": "simple-git-hooks",
    "build": "tsup",
    "prepublishOnly": "pnpm run build",
    "release": "vitest run && bumpp --commit \"chore: release v%s\" --push --tag && pnpm publish"
  },
  "dependencies": {
    "destr": "^2.0.3",
    "mitt": "^3.0.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.27.3",
    "@types/ws": "^8.5.12",
    "@vitest/coverage-v8": "^2.0.5",
    "bumpp": "^9.5.2",
    "eslint": "^9.9.1",
    "jsdom": "^25.0.0",
    "lint-staged": "^15.2.10",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.2.4",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.0.5",
    "ws": "^8.18.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "pnpm lint --fix"
    ]
  }
}
